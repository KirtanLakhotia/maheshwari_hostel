<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Maheshwari Hostel Mess Menu</title>
    
    <!-- External CSS & Bootstrap -->
    <link rel="stylesheet" href="css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Mukta:wght@200;300;400;500;600;700;800&family=Playwrite+AR:wght@100..400&family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
</head>
<body>
    <div class="Full_Frontend">
        
        <!-- Navigation Bar -->
        <div class="front">
            <nav class="navbar navbar-expand-lg nav_bg navbar-light static-top">
                <div class="container">
                    <a class="navbar-brand" href="https://www.boyshostelindore.com/">
                        <img src="https://www.boyshostelindore.com/images/SSJJ_LOGO.png" alt="Maheshwari_logo">
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse nav_buttons_div" id="navbarSupportedContent">
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item nav_button">
                                <a class="nav-link active" href="/"><button class="btn btn-outline-secondary">Home</button></a>
                            </li>
                            <li class="nav-item nav_button">
                                <a class="nav-link active" href="/"><button class="btn btn-outline-secondary">About</button></a>
                            </li>
                            <li class="nav-item nav_button">
                                <a class="nav-link active" href="/auth/google"><button class="btn btn-primary">Login</button></a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
        
        <!-- Heading Section -->
        <div class="heading_section">
            <h1 class="heading">HOSTEL MESS MENU</h1>
        </div>
        
        <!-- Menu Section -->
        <div class="menu_section">
            
            <!-- Days of the Week -->
            <script>
                const days = ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"];
                const menuItems = {
                    "Monday": ["खमण, पोहा & चाय", "आलू गोभी", "चावल, तुवरदाल + आलू-गोभी + काले चने, पापड़ + आचार + सलाद", "पोहा & चाय", "चावल, मिक्स-दाल + मसाला भिंडी + छोले, पापड़ + आचार + सलाद"],
                    "Tuesday": ["इडली-सांभर + ब्रेड & चाय", "पत्ता गोभी", "चावल, मिक्स-दाल + पत्ता गोभी + राजमा, पापड़ + आचार + सलाद", "बिस्किट & चाय", "चावल, तुवरदाल + गाजर मटर + कड़ी पकोड़ा, पापड़ + आचार + सलाद"],
                    "Wednesday": ["नमकीन पूरी + पोहा & चाय", "सुखी-सेव", "चावल, तुवरदाल + सेव-टमाटर + बालोर, पापड़ + आचार + सलाद", "ब्रेड & चाय", "चावल, तुवरदाल + आलू मेथी + हरे प्याज बेसन, पापड़ + आचार + सलाद"],
                    "Thursday": ["फ्राइड इडली + पोहा & चाय", "भिंडी-फ्राय", "चावल, मिक्स-दाल + कुरकुरी भिंडी + आलू झोल, पापड़ + आचार + सलाद", "बिस्किट & चाय", "जीरा-चावल, दाल, पराठे, शाही पनीर + रसगुल्ला / फ्राइड राइस, छोले भटूरे, गाजर का हलवा"],
                    "Friday": ["सैंडविच + पोहा & चाय", "मिक्स-वेज", "चावल, तुवरदाल + मिक्स वेज + बेसन गट्टे, पापड़ + आचार + सलाद", "ब्रेड & चाय", "चावल, तुवरदाल + सेव-टमाटर + बैंगन भरता, पापड़ + आचार + सलाद"],
                    "Saturday": ["पोहा + भाजिया & चाय", "नमकीन पराठे", "आलू पराठे/सेव पराठे/ मक्के की रोटी + सरसों साग, दही, पुलाव, चटनी", "भेल & चाय", "चावल, तुवरदाल + मूंग दाल + जाम की सब्जी, पापड़ + आचार + सलाद"],
                    "Sunday": ["समोसा/आलू-बड़ा/कचोरी & चाय", "---", "जीरा-चावल, दाल-बाटी, गुड़-चूरमा / जीरा चावल, दाल-बाफले, खीर / जीरा-चावल + दाल, कड़ाई-पनीर + फ्रूट कस्टर्ड", "---", "कड़ी-खिचड़ी / पुलाव / साबूदाना खिचड़ी, आचार"]
                };

                days.forEach(day => {
                    document.write(`<p class="gap-1">
                        <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample_${day}" aria-expanded="false">
                            ${day}
                        </button>
                    </p>
                    <div class="collapse" id="collapseExample_${day}">
                        <div class="card card-body">
                            <div class="day-menu row">
                                ${menuItems[day].map((meal, index) => `<div class="meal col-md-6">
                                    <h5>${["नाश्ता", "टिफ़िन", "लंच", "हाई-टी", "डिनर"][index]}</h5>
                                    <p>${meal}</p>
                                </div>`).join('')}
                            </div>
                        </div>
                    </div>`);
                });
            </script>
        </div>
    </div>
    
    <!-- Bootstrap Script -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
